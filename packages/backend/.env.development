# Development Environment Configuration
NODE_ENV=development
PORT=5000

# Database
# Connection pool settings: ?connection_limit=10&pool_timeout=20
DATABASE_URL=postgresql://onramp:onramp_dev_password@localhost:5432/onramp?connection_limit=10&pool_timeout=20

# Redis Cache
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# GitHub API
GITHUB_TOKEN=your_github_personal_access_token_here

# LLM Service (OpenAI or Anthropic)
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (in seconds)
CACHE_TTL_REPOSITORY_ANALYSIS=3600
CACHE_TTL_ISSUE_CLASSIFICATION=1800
