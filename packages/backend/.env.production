# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database - Update with production database URL
DATABASE_URL=postgresql://user:password@host:5432/onramp

# Redis Cache - Update with production Redis URL
REDIS_URL=redis://host:6379

# CORS Configuration - Update with production frontend URL
CORS_ORIGIN=https://your-frontend-domain.com

# GitHub API
GITHUB_TOKEN=your_github_personal_access_token_here

# LLM Service (OpenAI or Anthropic)
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (in seconds)
CACHE_TTL_REPOSITORY_ANALYSIS=3600
CACHE_TTL_ISSUE_CLASSIFICATION=1800
